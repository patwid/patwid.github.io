on:
  push:
    branches: [ master ]
  workflow_dispatch:

permissions:
  contents: write

concurrency:
  group: pages
  cancel-in-progress: false

env:
  NIX_CONFIG: experimental-features = nix-command flakes pipe-operators

jobs:
  main:
    runs-on: ubuntu-latest
    container: nixos/nix:latest
    steps:
      - name: Checkout
        run: |
          git config --global --add safe.directory $(pwd)
          git clone --depth 1 --no-single-branch ${{ github.server_url }}/${{ github.repository }} .
          git checkout ${{ github.ref }}

      - name: Build
        run: |
          nix develop -c hugo --gc --minify

      - name: Publish
        run: |
          git config user.name 'github-actions[bot]'
          git config user.email '41898282+github-actions[bot]@users.noreply.github.com'

          git switch gh-pages
          git pull origin gh-pages
          find . -mindepth 1 -maxdepth 1 ! -name 'public' ! -name '.git' -exec rm -r {} +
          cp -r public/* .
          rm -r public
          git add .
          git commit -m 'chore: update pages'
          git push https://x-access-token:${{ github.token }}@github.com/${{ github.repository }}.git gh-pages
